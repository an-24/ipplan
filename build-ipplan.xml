<?xml version="1.0" encoding="UTF-8"?>
<project name="ipplan" basedir="." default="default">
    <target name="default" depends="buildwar,deploy"></target>
    <target name="buildwar">
        <war basedir="war-ipplan" destfile="ipplan.war" webxml="war-ipplan/WEB-INF/web.xml">
            <exclude name="WEB-INF/**" />
            <webinf dir="war-ipplan/WEB-INF/">
                <include name="**/*.jar" />
            </webinf>
        </war>
    </target>
    <target name="deploy">
               <copy file="ipplan.war" todir="." />
    </target>
</project>